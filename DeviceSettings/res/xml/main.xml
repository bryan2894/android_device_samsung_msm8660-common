<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/category_touchkey_title">
        <!-- BLN Timeout -->
        <ListPreference
            android:key="bln_timeout"
            android:title="@string/bln_timeout_title_head"
            android:summary="@string/bln_timeout_summary_head"
            android:entries="@array/bln_timeout_entries"
            android:entryValues="@array/bln_timeout_entries_values"
            android:defaultValue="600000" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_display_title">
        <!-- Panel UV -->
        <ListPreference
            android:key="panel_uv"
            android:title="@string/paneluv_title_head"
            android:summary="@string/paneluv_summary_head"
            android:entries="@array/paneluv_entries"
            android:entryValues="@array/paneluv_entries_values"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_misc_title">
        <!-- Low Power Flash -->
        <CheckBoxPreference
            android:key="lp_flash"
            android:title="@string/lp_flash_title_head"
            android:summary="@string/lp_flash_summary_head"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>
